{% extends 'base.html.twig' %}

{% block title %}Paiement réussi{% endblock %}

{% block body %}

<div class="sucess-page__wrapper">
    <p class="centered thanks">Merci pour votre commande !</p>
    <div class="success-container">
        <img src="/icones/success120.webp" alt="Icône représent un rond ayant un fond vert et une coche blanche"> 
        <p>Paiement réussi</p>
    </div>
    <p class="centered confirmed">Un e-mail de confirmation vous a été envoyé</p>
</div>

<style>
    .sucess-page__wrapper{
        padding:2.5rem;
        background-position-y: -30px;
    }

    .success-container{
        display: flex;
        align-items: center;
        width: fit-content;
        margin: auto;
        font-size:2.5em;

        padding:2rem 5rem;
        border-radius:6px;
     
        box-shadow:var(--light-grey) 5px 2px 16px -3px;
        color:var(--main);
    }

    .thanks,.confirmed{
        margin: 2.5rem 0;
    }

    .thanks{
        font-size:2em;
    }

    .confirmed{
        font-family:'roboto condensed';
        font-size:1.3em;
    }

</style>
{% endblock %}
