
    {% block body %}
    {% if totalPendingOrders is defined %}
       <h1>{{totalPendingOrders}} commandes non retirées</h1>
    {% endif %}
        {% if pendingOrders is defined and pendingOrders is not null%}
        <table>
            <tr>
                <thead>
                    <th>Référence</th>
                    <th>Date de placement</th>
                    <th>Nom Client</th>
                    <th>Contact client</th>
                    <th>Point de retrait</th>
                </thead>
            </tr>
            <tbody>
            {% for pendingOrder in pendingOrders %}

                <tr>
                    <td>{{pendingOrder.orderReference}}</td>
                    <td>{{pendingOrder.dateOfPlacement|date('d/m/Y')}}</td>
                    <td>{{pendingOrder.orderUserFirstName}} {{pendingOrder.orderUserLastName}}</td>
                    <td>{{pendingOrder.orderEmail}}</td>
                    <td>{{pendingOrder.establishment.establishmentName}}</td>
                </tr> 
            {% endfor %}
        {% endif %}
        </tbody>
    </table>

    <style>
        table{
            color: rgb(27, 25, 25);
            width:80%;
            border-collapse: collapse;
            margin: auto;

            td,th{
                text-align: left;
            }

            td{
                border-bottom: 1px solid grey;
            }

            td{
                padding:0.5rem;
            }
        }
    </style>
    {% endblock body %}